<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
<record id="simple_todo_model_form_view" model="ir.ui.view">
        <field name="name">Simple Todo Model Form</field>
        <field name="model">simple_todo.model</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
<record id="simple_todo_model_list_view" model="ir.ui.view">
        <field name="name">Simple Todo Model List</field>
        <field name="model">simple_todo.model</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
<record id="simple_todo_model_search_view" model="ir.ui.view">
        <field name="name">Simple Todo Model Search</field>
        <field name="model">simple_todo.model</field>
        <field name="arch" type="xml">
            <search string="Simple Todo Model Search">
                <field name="name"/>
                <field name="description"/>
                <field name="active"/>
            </search>
        </field>
    </record>

    <!-- Action Window -->
<record id="action_simple_todo_model" model="ir.actions.act_window">
        <field name="name">Simple Todo Model</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">simple_todo.model</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first simple todo model
            </p>
        </field>
    </record>
</odoo>